<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextColorWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/editTextColorWhite</item>
        <item name="android:textSize">@dimen/editText_textSize_login</item>
        <item name="android:textColorPrimary">@color/editTextColorWhite</item>
        <item name="colorAccent">@color/editTextColorWhite</item>
        <item name="colorControlNormal">@color/editTextColorWhite</item>
        <item name="colorControlActivated">@color/editTextColorWhite</item>
    </style>

    <style name="EditTextColorBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/editTextColorBlack</item>
        <item name="android:textSize">@dimen/editText_textSize_login</item>
        <item name="android:textColorPrimary">@color/editTextColorBlack</item>
        <item name="colorAccent">@color/editTextColorBlack</item>
        <item name="colorControlNormal">@color/editTextColorBlack</item>
        <item name="colorControlActivated">@color/editTextColorBlack</item>
    </style>

    <style name="DefaultButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDarkDefault</item>
        <item name="colorControlHighlight">@color/colorPrimaryDefault</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WarningButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDarkWarning</item>
        <item name="colorControlHighlight">@color/colorPrimaryWarning</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DangerButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDarkDanger</item>
        <item name="colorControlHighlight">@color/colorPrimaryDanger</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
